haskell_library(
    name = "lib",
    srcs = glob(["src/**/*.hs"]),
    compiler_flags = ["-XOverloadedStrings"],
    src_strip_prefix = "src",
    deps = [
        ":base",
        "//semantic-source:lib",
        "@stackage//:aeson",
        "@stackage//:algebraic-graphs",
        "@stackage//:containers",
        "@stackage//:filepath",
